script/source = "extends CharacterBody2D

const SPEED = 150.0
const JUMP_VELOCITY = -400.0

var someoneOnHead: bool = false
var onSomeHead: bool = false
var playerStorage
var onLadder: bool = false
var inAir: bool = false
var maskOn := false

@onready var animation_player: AnimationPlayer = $AnimationPlayer
@export var vent: Area2D 
@export var index: int = 0
@export var height: float
@export var head: Sprite2D
var holdItemName: String
@onready var topIdealPos = %topIdealPos
@onready var holdItemPos = %holdItemPos

func _physics_process(delta: float) -> void:
	# Handle collision with another character's head
	if (!$RayCast2D.is_colliding()):
		onSomeHead = false
		if ($RayCast2D.get_collider() != null and $RayCast2D.get_collider().name.contains(\"Character\")):
			onSomeHead = true
			
	if not is_on_floor():
		inAir = true
	else: 
		inAir = false

	# Add gravity when the character is not on the ladder
	if not is_on_floor() and not onLadder:
		velocity += get_gravity() * delta

	# Handle movement and animation logic when this character is active
	if Global.current == index:
		animation_player.play(\"select\")
		$select.visible = true

		# Handle jump
		if Input.is_action_just_pressed(\"ui_up\") and is_on_floor() and not someoneOnHead and not onLadder:
			velocity.y = JUMP_VELOCITY
		
		# Handle movement input and walking animations
		var direction := Input.get_axis(\"ui_left\", \"ui_right\")
		if direction:
			velocity.x = direction * SPEED
			
			# Play walking animations based on the movement direction
			if direction < 0:
				walkingLeft()  # Moving left
			elif direction > 0:
				walkingRight()  # Moving right
		else:
			stopWalking()  # Stop walking animation when idle or in air
			velocity.x = move_toward(velocity.x, 0, SPEED)

	else:
		$select.visible = false
	
	# Handle when the character is on top of another
	if someoneOnHead and Global.current == index:
		playerStorage.position.x = transform.origin.x
		playerStorage.position.y = transform.origin.y - height

	# Handle movement when on a ladder
	if onLadder and Global.current == index:
		if Input.is_action_pressed(\"up_ladder\"):
			velocity.y -= 5
		elif Input.is_action_pressed(\"down_ladder\"):
			velocity.y += 5
		else:
			velocity.y = 0  # Stop vertical movement on the ladder
		
		move_and_slide()  # Skip further processing if on a ladder
		return

	# Prevent movement when on top of another character and inactive
	if Global.current != index and onSomeHead:
		velocity.x = 0
	else:
		move_and_slide()

# Handle body entering/exiting area events
func _on_sneaky_area_body_entered(body):
	if body.name.contains(\"Character\") and body.index != index and not onLadder and !body.onSomeHead:
		someoneOnHead = true
		playerStorage = body
		playerStorage.onSomeHead = true

func _on_sneaky_area_body_exited(body):
	if body.name.contains(\"Character\") and body.index != index:
		someoneOnHead = false
		playerStorage = body
		playerStorage.onSomeHead = false

func _on_ladder_checker_body_entered(body: Node2D) -> void:
	onLadder = true

func _on_ladder_checker_body_exited(body: Node2D) -> void:
	onLadder = false

# Toggle mask on/off
func flipMask():
	if not maskOn:
		$racoon.set_deferred(\"visible\", false)
		$PuttingOnMask.set_deferred(\"visible\", true)
		$Mask.play(\"mask_on\")
		await get_tree().create_timer(1.6).timeout
		$racoon.set_deferred(\"visible\", true)
		$PuttingOnMask.set_deferred(\"visible\", false)
		maskOn = true
	else:
		$racoon.set_deferred(\"visible\", false)
		$PuttingOnMask.set_deferred(\"visible\", true)
		$Mask.play_backwards(\"mask_on\")
		await get_tree().create_timer(1.6).timeout
		$racoon.set_deferred(\"visible\", true)
		$PuttingOnMask.set_deferred(\"visible\", false)
		maskOn = false

# Walking animation for left movement
func walkingLeft():
	$Walking.set_deferred(\"visible\", true)
	$Walking.flip_h = true
	$racoon.set_deferred(\"visible\", false)
	$Walk.play(\"Walk_Right\")

# Walking animation for right movement
func walkingRight():
	$Walking.set_deferred(\"visible\", true)
	$Walking.flip_h = false
	$racoon.set_deferred(\"visible\", false)
	$Walk.play(\"Walk_Right\")

# Stop walking animation when idle or in the air
func stopWalking():
	$Walking.set_deferred(\"visible\", false)
	$racoon.set_deferred(\"visible\", true)
"

